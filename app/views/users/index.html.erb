<div class="container">
  <div class="row">
    <div class="col-md-6">
      <section class="users-section">
        <%= render partial: 'friend_requests' %>
        <div class="mt-5">
          <h2>All Users</h2>
          <ul class="users-list">
            <% @users.each do |user| %>
              <li>
                Name: <%= user.name %>
                <span class="profile-link">
                  <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
                </span>
                <span>
                  <%= friend_request_btn(user) %>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      </section>

    </div>
  </div>
</div>
