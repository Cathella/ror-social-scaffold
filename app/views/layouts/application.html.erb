<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>
  <body>
    <nav class="nav d-flex justify-content-between px-3">
      <div class="d-flex">
        <p><%= link_to 'Stay in touch', root_path %></p>
        <p class="mx-4"><%= link_to 'Timeline', posts_path %></p>
        <p><%= link_to 'All users', users_path %></p>
      </div>

      <div class="d-flex">
        <% if current_user %>
          <p>FRIEND REQUESTS (<%= friend_request_count %>)</p>
          <p class="mx-4"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></p>
          <p class="font-weight-bold"><%= current_user.name %></p>
        <% else %>
          <%= link_to 'Sign in', user_session_path %>
        <% end %>
      </div>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
